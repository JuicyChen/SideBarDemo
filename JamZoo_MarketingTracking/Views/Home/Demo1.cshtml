
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Demo1</title>
    <title>Bootstrap 3 Collapsible Sidebar</title>
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="~/Content/jquery.mCustomScrollbar.min.css" rel="stylesheet" />
    <!-- 我的css -->
    @*<link rel="stylesheet" href="css/custom.css">*@
    <style>
        .wrapper{
            display:flex;
            align-items:stretch;
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            min-height: 100vh;  /*讓sidebar的垂直高度等同螢幕縮放*/
        }

        #sidebar.active{
            margin-left: -250px;
        }

        a[data-toggle="collapse"] {
            position: relative;
        }

        a[aria-expanded="false"]::before, a[aria-expanded="true"]::before {
            content: '\e259';
            display: block;
            position: absolute;
            right: 20px;
            font-family: 'Glyphicons Halflings';
            font-size:0.6em;
        }

        a[aria-expanded="true"]::before {
            content: '\e260';
        }

        /*Media Query: 適應不同裝置 提供不同樣式*/
        /*Instead of appearing by default, it'll be hidden and appear only after clicking the toggle button. 
        Like this, we will save valuable space for your content and show the navigation to the user only when needed.*/ 
        @@media(max-width:768px) {
            #sidebar {
                margin-left: -250px;
            }
            #sidebar.active{
                margin-left:0px;
            }
        }

        @@import "https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700";
        body {
            font-family: 'Poppins', sans-serif;
            background: #FAFAFA;
        }

        p {
            font-family: 'Poppins', sans-serif;
            font-size: 1.1em;
            font-weight: 300;
            line-height: 1.7em;
            color: #999;
        }

        /*0.5秒 開闔*/
        a, a:hover, a:focus {
            color: inherit;
            text-decoration: none;
            transition: all 0.5s;   
        }

        #sidebar {
            background: #7386D5;
            color: #fff;
            transition: all 0.5s;
        }
        #sidebar.sidebar-header{
            padding:20px;
            background: #6d7fcc;
        }
        #sidebar ul.components{
            padding:20px 0;
            border-bottom:1px solid #47748b;
        }
        #sidebar ul p{
            color: #FFF;
            padding: 10px;
        }
        
        /*調整儀錶板各項目間距*/
        #sidebar ul li a{
            padding: 10px;
            font-size: 1.1em;
            display: block;
        }

        /*滑鼠移入效果*/
        #sidebar ul li a:hover{
            color: #7386D5;
            background: #fff;
        }

        /*有次分層的項目 區分顏色*/
        #sidebar ul li.active > a, a[aria-expanded="true"]{
            color: #fff;
            background: #6d7fcc;
        }

        /*次分層設定*/
        ul ul a {
            font-size: 0.9em !important;
            padding-left: 30px !important;
            background: #6d7fcc;
        }
    </style>
</head>
<body>
    <div class="wrapper"> @*wrapper自定義class*@

        <!-- Sidebar -->
        <nav id="sidebar">
            <!-- Sidebar Header -->
            <div class="sidebar-header">
                <h3>LOGO Header</h3>
            </div>

            <!-- Sidebar Links -->
            <ul class="list-unstyled components">
                <li><a href="#">Test1</a></li>
                <li><a href="#">選單1</a></li>
                <li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false">選單2</a>
                    <ul id="homeSubmenu" class="collapse"> @*list-unstyled是否靠左對齊*@
                        <li><a href="#">item1</a></li>
                        <li><a href="#">item2</a></li>
                        <li><a href="#">item3</a></li>
                    </ul>
                </li>
            </ul>

        </nav>

        <!-- Page Content -->
        <div id="content">
            <button type="button" id="sidebarCollapse" class="btn btn-danger">
                <i class="glyphicon glyphicon-align-left"></i> 芝麻開關
            </button>
            <h3>大標題</h3>
            <p>內容</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <hr />
            <h4>小標題1</h4>
            <p>內容</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <br />
            <h4>小標題2</h4>
            <p>內容</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
            <p>增加垂直長度</p>
        </div>

    </div>    


    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Scroller js CDN -->
    <script src="~/Scripts/jquery.mCustomScrollbar.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#sidebar").mCustomScrollbar({
                theme: "minimal"
            });

            $('#sidebarCollapse').on('click', function () {
                //開關sidebar
                $('#sidebar').toggleClass('active');
                $('.collapse.in').toggleClass('in');
                $('a[aria-expanded=true]').attr('aria-expanded', 'false');
            });

        });
    </script>
</body>
</html>
