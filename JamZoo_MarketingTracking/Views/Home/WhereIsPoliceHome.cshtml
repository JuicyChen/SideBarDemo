@model JamZoo_MarketingTracking.Entities.User

@{
    ViewBag.Title = "警察在哪裡";
}

@section style{
    <style>
        .ErrorMessage1,.ErrorMessage2,.ErrorMessage3{
            color:red;
        }
    </style>
    }
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var rule1 = /\S/;
        var rule2 = /\d/;
        $('.required1').blur(function () {
            if (rule1.test($(this).val())) {
                $('.ErrorMessage1').text('');
                $(this).css("border-color", "#77FF00")
            }
            else {
                $('.ErrorMessage1').text('必填 不可為空白');
                $(this).css("border-color", "red")
            }
        });
        $('.required2').blur(function () {
            if (rule1.test($(this).val())) {
                $('.ErrorMessage2').text('');
                $(this).css("border-color", "#77FF00")
            }
            else {
                $('.ErrorMessage2').text('必填 不可為空白');
                $(this).css("border-color", "red")
            }
        })

        $('.required2').blur(function () {
            if (rule2.test($(this).val())) {
                $('.ErrorMessage3').text('');
                $(this).css("border-color", "#77FF00")
            }
            else {
                $('.ErrorMessage3').text('必須為數字');
                $(this).css("border-color", "red")
            }
        })
    
    })

</script>

    <h2>警察在哪裡</h2>

    <div class="container">
        <h2 style="font-family:'Microsoft JhengHei';font-weight:bold;font-size:24px;"><span style="color:orangered">立刻加入活動</span></h2>
    </div>
    <div class="container">
        <h3 style="font-family:'Microsoft JhengHei';font-weight:bold;font-size:16px;">填寫註冊資料</h3>
        <hr />
        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { id = "UserImformation", @class = "form-horizontal",name= "UserImformation" }))
        {
            <div class="form-group">
                @Html.LabelFor(user => user.UserName, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10 ">
                    @Html.EditorFor(user => user.UserName, new { htmlAttributes = new { @class = "required1 form-control", placeholder = "請輸入您的姓名(必填)", required=true } }) 
                    <div><span class="ErrorMessage1"></span></div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.Phone, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10 ">
                    @Html.EditorFor(user => user.Phone, new { htmlAttributes = new { @class = "required2 form-control", placeholder = "請輸入您的手機(必填)" ,required=true} })
                    <div><span class="ErrorMessage2"></span></div>
                    <div><span class="ErrorMessage3"></span></div>                  
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(user => user.Email, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10 ">
                    @Html.EditorFor(user => user.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "請輸入您的Email(必填)" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" id="BtnRegister" name="註冊" class="btn btn-success">尚未加入，註冊</button>
                    <button type="submit" id="BtnLogin" name=" 登入" class="btn btn-primary" onclick="UserImformation.action='@Url.Action("Login","Home")';if($('#UserImformation').valid()) UserImformation.submit()">已經加入，登入</button>
                </div>
            </div>
        }


    </div>
