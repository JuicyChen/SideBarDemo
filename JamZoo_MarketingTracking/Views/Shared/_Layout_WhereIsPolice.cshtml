<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JamZoo科技</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("style",false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("加入活動", "WhereIsPoliceHome", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("首頁", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("詳細內容", "About", "Home")</li>
                    <li>@Html.ActionLink("連絡方式", "Contact", "Home")</li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @{
                            if (Request.Cookies["UserName"] != null)
                            {
                                @Html.ActionLink("歡迎，" + HttpUtility.UrlDecode(Request.Cookies["UserName"].Value), "UserIndex", "User", null, new { @class = "glyphicon glyphicon-user" })
                            }
                            else
                            {
                                @Html.ActionLink("登入/註冊", "WhereIsPoliceHome", "Home")
                            }
                        }
                    </li>
                    <li>
                        @{ 
                            if(Request.Cookies["UserID"]!=null)
                            {
                                @Html.ActionLink("登出", "Logout","Home",null, new { @class = "glyphicon glyphicon-log-out" })
                            }

                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - JamZoo科技</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.qrcode.min.js"></script>
    <script src="~/Scripts/qrcode.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
