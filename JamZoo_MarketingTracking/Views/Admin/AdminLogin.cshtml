@model JamZoo_MarketingTracking.ViewModels.AdminViewModel

@{
    ViewBag.Title = "AdminLogin";
}

<h2>AdminLogin</h2>

<div>
    <h2 style="font-family:'Microsoft JhengHei';font-weight:bold;font-size:24px;"><span style="color:orangered">JamZoo推廣追蹤系統</span></h2>
</div>
<hr />
<div>
    @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post, new { @class = "form-horizontal", novalidate = "novalidate" }))
    {
        <div class="form-group">
            @Html.LabelFor(admin => admin.AdminName, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(admin => admin.AdminName, new { htmlAttributes = new { @class = "form-control", placeholder = "管理員帳號" } })
                @Html.ValidationMessageFor(admin => admin.AdminName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(admin => admin.AdminPassword, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(admin => admin.AdminPassword, new { htmlAttributes = new { @class = "form-control", placeholder = "管理員密碼" } })
                @Html.ValidationMessageFor(admin => admin.AdminPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-2">
            </div>
            <div class="col-lg-10">
                @Html.EditorFor(admin => admin.RememberMe)
                @Html.DisplayNameFor(admin => admin.RememberMe)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">登入</button>
            </div>
        </div>
    }
</div>